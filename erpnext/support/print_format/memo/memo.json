 "html": "<table width=\"100%\" style=\"font-size: 12px; padding: 5px !important\">\n    <tr>\n        <td colspan=2><b><h1>MEMO</h1></b></td>\n    </tr>\n    <tr>\n        <td width=\"50%\">\n            <table width=\"100%\" style=\"font-size: 12px; padding: 5px !important\">\n                <tr>\n                    <td width=\"15%\">No.</td>\n                    <td width=\"85%\">: {{doc.name or \"\"}}</td>\n                </tr>\n                <tr>\n                    <td>Tgl.</td>\n                    <td>: \n                    {{_(frappe.utils.get_datetime(doc.tanggal_memo).strftime('%d'))}}\n                    {{_(frappe.utils.get_datetime(doc.tanggal_memo).strftime('%B'))}}\n                    {{_(frappe.utils.get_datetime(doc.tanggal_memo).strftime('%Y'))}}</td>\n                </tr>\n                <tr>\n                    <td>Hal</td>\n                    <td>: <b>{{doc.hal or \"\"}}</b></td>\n                </tr>\n            </table>\n        </td>\n        <td width=\"50%\">\n            <table width=\"100%\" style=\"font-size: 12px; padding: 5px !important\">\n                <tr>\n                    <td width=\"23%\">Dari</td>\n                    <td width=\"1%\" class=\"text-right\">:</td>\n                    <td width=\"76%\">\n                        {% if doc.dari_merupakan_karyawan == 1 %}\n                        {{doc.dari_emoloyee_name or \"\"}}\n                        {% else %}\n                        {{doc.dari_designation or \"\"}}\n                        {% endif %}\n                    </td>\n                </tr>\n                <tr>\n                    <td>Kepada</td>\n                    <td class=\"text-right\">:</td>\n                    <td>\n                        {% for d in doc.kepada %}\n                        {% if d.type == \"Employee\" %}\n                        {{d.employee_name or \"\"}}\n                        {% else %}\n                        {{loop.index}}. {{d.pihak or \"\"}}\n                        {% endif %}\n                        <br>\n                        {% endfor %}\n                    </td>\n                </tr>\n                {% if doc.tembusan_employee_name or doc.tembusan_designation %}\n                <tr>\n                    <td>Tembusan</td>\n                    <td class=\"text-right\">:</td>\n                    <td>\n                        {% if doc.tembusan_merupakan_karyawan == 1 %}\n                        {{doc.tembusan_employee_name or \"\"}}\n                        {% else %}\n                        {{doc.tembusan_designation or \"\"}}\n                        {% endif %}\n                    </td>\n                </tr>\n                {% endif %}\n            </table>\n        </td>\n    </tr>\n    <tr>\n        <td colspan=2>{{doc.pesan_1 or \"\"}}</td>\n    </tr>\n    <tr>\n        <td colspan=2>\n            <table width=\"100%\" style=\"font-size: 12px; padding: 5px !important; margin-left: 20px !important;\">\n                <tr>\n                    <td width=\"10%\">Hari</td>\n                    <td width=\"90%\">:{% if doc.tanggal %} {{_(frappe.utils.get_datetime(doc.tanggal).strftime('%A'))}} {% endif %}</td>\n                </tr>\n                <tr>\n                    <td>Tanggal</td>\n                    <td>:{% if doc.tanggal %}\n                    {{_(frappe.utils.get_datetime(doc.tanggal).strftime('%d'))}}\n                    {{_(frappe.utils.get_datetime(doc.tanggal).strftime('%B'))}}\n                    {{_(frappe.utils.get_datetime(doc.tanggal).strftime('%Y'))}}{% endif %}</td>\n                </tr>\n                {% if doc.dengan_waktu == 1 %}\n                <tr>\n                    <td>Waktu</td>\n                    <td>: {% if doc.waktu_mulai %}{{doc.get_formatted(\"waktu_mulai\") or \"\"}} sampai dengan {{doc.get_formatted(\"waktu_selesai\") or \"\"}}{% endif %}</td>\n                </tr>\n                {% endif %}\n                {% if doc.tempat %}\n                <tr>\n                    <td>Tempat</td>\n                    <td>: {{doc.tempat or \"\"}}</td>\n                </tr>\n                {% endif %}\n                <tr>\n                    <td>Agenda</td>\n                    <td>: {{doc.agenda or \"\"}}</td>\n                </tr>\n            </table>\n        </td>\n    </tr>\n    <tr>\n        <td colspan=2>\n            {{doc.keterangan or \"\"}}<br>\n            {{doc.pesan_2 or \"\"}}\n        </td>\n    </tr>\n    <tr>\n        <td colspan=2>\n            <br>\n            <br>\n            <br>\n            <i>AL/DU</i>\n        </td>\n    </tr>\n</table>",
